<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <solid android:color="#50000000"/> <!-- Shadow color -->
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="40dp" />

            <!-- Give the shadow some height -->
            <padding
                android:top="0dp"
                android:right="0dp"
                android:bottom="6dp"
                android:left="4dp" />
        </shape>
    </item>

    <!-- Your original shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2B2E70"/>
            <corners
                android:topLeftRadius="40dp"
                android:topRightRadius="0dp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="40dp" />
        </shape>
    </item>
</layer-list>
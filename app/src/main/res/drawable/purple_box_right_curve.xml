<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Drop Shadow Stack -->
    <item>
        <shape>
            <solid android:color="#50000000"/> <!-- Shadow color -->
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="40dp"
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="0dp" />

            <!-- Give the shadow some height -->
            <padding
                android:top="0dp"
                android:right="4dp"
                android:bottom="6dp"
                android:left="0dp" />
        </shape>
    </item>

    <!-- Your original shape -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#2B2E70"/>
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="40dp"
                android:bottomRightRadius="40dp"
                android:bottomLeftRadius="0dp" />
        </shape>
    </item>
</layer-list>
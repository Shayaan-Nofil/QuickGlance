<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chatspage_Activity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/profile_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/profile_purple"/>

        <Button
            android:id="@+id/search_button"
            android:layout_marginStart="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/search_purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chats"
            android:textSize="20sp"
            android:layout_marginStart="85dp"
            android:textColor="#061F4D"
            android:textStyle="bold"/>


        <Button
            android:id="@+id/addfriend_button"
            android:layout_marginStart="120dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:background="@drawable/add_person_filled_purple"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Body_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="13"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contacts_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/chatspage_seperator_box"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/bruce_pic"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bruce"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#061F4D"/>

                <LinearLayout
                    android:layout_marginTop="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/snap_notif_pic"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/cyan_rectangle"/>
                    <TextView
                        android:id="@+id/Snap_notif"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="New Glance"
                        android:textSize="11sp"
                        android:textColor="#15e5eb"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:src="@drawable/grey_dot"/>
                    <TextView
                        android:id="@+id/timeago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="1m"
                        android:textSize="11sp"/>
                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:layout_width="5dp"
                        android:layout_height="5dp"
                        android:src="@drawable/grey_dot"/>
                    <TextView
                        android:id="@+id/streak_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="5dp"
                        android:text="452"
                        android:textSize="11sp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/star"/>

                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_marginStart="70dp"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:src="@drawable/vertical_seperator"/>

            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="35dp"
                android:background="@drawable/message_box"/>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Footer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dock"
            android:layout_marginHorizontal="60dp"/>

        <LinearLayout
            android:id="@+id/nav_dock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/chats_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/chat_highlighted"/>

            <Button
                android:id="@+id/Camerapage_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/camera"/>

            <Button
                android:id="@+id/Stories_button"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/stories_grey"/>



        </LinearLayout>


    </RelativeLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reset_password_number_activity"
    android:background="@drawable/reset_password_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OTP?"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weâ€™ve Sent You an OTP (One Tome Passcode)\nOn Your Device Complete OTP"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp">


            <EditText
                android:id="@+id/num1"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="@drawable/reset_edittext_box"
                android:layout_marginHorizontal="2dp"
                android:hint="0"
                android:textColor="#4B4B4B"
                android:textColorHint="#4B4B4B"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/num2"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="@drawable/reset_edittext_box"
                android:layout_marginHorizontal="2dp"
                android:hint="0"
                android:textColor="#4B4B4B"
                android:textColorHint="#4B4B4B"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/num3"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="@drawable/reset_edittext_box"
                android:layout_marginHorizontal="2dp"
                android:hint="0"
                android:textColor="#4B4B4B"
                android:textColorHint="#4B4B4B"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/reset_edittext_box"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:id="@+id/num1"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="@drawable/reset_edittext_box"
                android:layout_marginHorizontal="2dp"
                android:hint="0"
                android:textColor="#4B4B4B"
                android:textColorHint="#4B4B4B"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/num2"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="@drawable/reset_edittext_box"
                android:layout_marginHorizontal="2dp"
                android:hint="0"
                android:textColor="#4B4B4B"
                android:textColorHint="#4B4B4B"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>

            <EditText
                android:id="@+id/num3"
                android:layout_width="50dp"
                android:layout_height="65dp"
                android:background="@drawable/reset_edittext_box"
                android:layout_marginHorizontal="2dp"
                android:hint="0"
                android:textColor="#4B4B4B"
                android:textColorHint="#4B4B4B"
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>

        <Button
            android:id="@+id/sendcode_button"
            android:layout_marginTop="50dp"
            android:layout_marginStart="5dp"
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:background="@drawable/login_purple_button"
            android:layout_gravity="center_horizontal"
            android:text="Confirm"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:paddingBottom="12dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>
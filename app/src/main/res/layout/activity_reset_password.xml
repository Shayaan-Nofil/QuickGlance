<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reset_password_number_activity"
    android:background="@drawable/reset_password_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password?"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your password should be atleast 8 characters long"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/newpassword_edittext"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/reset_edittext_box"
            android:hint="New Password"
            android:textColor="#4B4B4B"
            android:textColorHint="#4B4B4B"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:id="@+id/confirmpassword_edittext"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/reset_edittext_box"
            android:hint="Confirm Password"
            android:textColor="#4B4B4B"
            android:textColorHint="#4B4B4B"
            android:textSize="15sp"
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/sendcode_button"
            android:layout_marginTop="50dp"
            android:layout_marginStart="5dp"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/login_purple_button"
            android:layout_gravity="center_horizontal"
            android:text="Login"
            android:textAllCaps="false"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>

</RelativeLayout>
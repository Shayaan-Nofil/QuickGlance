<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reset_password_number_activity"
    android:background="@drawable/reset_password_background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's your number?"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We'll send you an SMS verification code"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"/>

        <EditText
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:hint="Enter your number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="15sp"
            android:textAlignment="center"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:id="@+id/sendcode_button"
            android:layout_marginTop="150dp"
            android:layout_marginStart="5dp"
            android:layout_width="160dp"
            android:layout_height="70dp"
            android:background="@drawable/login_purple_button"
            android:layout_gravity="center_horizontal"
            android:text="Send Code"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/white"/>

    </LinearLayout>

    <TextView
        android:id="@+id/signup_email_button"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:text="Sign up with email instead"
        android:textSize="15sp"
        android:textColor="#8497D0"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Chat_Activity">


    <LinearLayout
        android:id="@+id/search_div"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/back_arrow"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:background="@drawable/back_purple"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/ChatterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dan"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="33sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/back_arrow"
                android:layout_marginStart="15dp"/>

            <TextView
                android:id="@+id/call_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/phone_purple"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/search_div"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            android:background="@drawable/chatspage_seperator_box">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="8dp"
                android:layout_marginEnd="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shayaan"
                    android:layout_gravity="end"
                    android:textColor="#FF0000"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hello there!"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:textSize="8sp"
                    android:layout_gravity="right"
                    android:textColor="#8497D0"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/chatspage_seperator_box">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingVertical="8dp"
                android:orientation="vertical"
                android:layout_marginStart="17dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dan"
                    android:textColor="#2B2E70"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="General Kenobi!"
                    android:textSize="15sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:textSize="8sp"
                    android:textColor="#8497D0"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F1F1F1"
        android:layout_alignParentBottom="true"
        android:gravity="center">

        <Button
            android:id="@+id/camera_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1.2"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/camera_grey"/>

        <Button
            android:id="@+id/gallery_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/gallery_grey"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/textbox_grey"
            android:scaleY="0.7"
            android:paddingStart="10dp"
            android:hint="Send a chat"
            android:textSize="16sp" />

        <Button
            android:id="@+id/mic_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/microphone_grey"/>

        <Button
            android:id="@+id/send_button"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.8"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/send_purple"/>

    </LinearLayout>

</RelativeLayout>
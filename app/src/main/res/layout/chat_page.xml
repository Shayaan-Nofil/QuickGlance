<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161A25"
    tools:context=".Chat_Activity">


    <LinearLayout
        android:id="@+id/search_div"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2F315A"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/back_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/back_icon_mauve"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>

        <TextView
            android:id="@+id/Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Username"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="27sp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="30dp"/>

        <TextView
            android:id="@+id/call_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/call_icon_mauve"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="70dp"/>

        <TextView
            android:id="@+id/video_call_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/video_call_icon_mauve"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="20dp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/search_div"
        android:layout_above="@+id/chat_box"
        android:orientation="vertical"
        android:gravity="bottom">


        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:gravity="right">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingRight="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="15dp"
                    android:text=" I need your guidance."
                    android:background="@drawable/purple_box_left_curve"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:textSize="12sp"

                    android:layout_gravity="right"
                    android:textColor="#8497D0"/>
            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_height="80dp"
            android:orientation="horizontal">


            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="70dp"
                android:layout_marginLeft="18dp"
                android:src="@drawable/default_profile" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingTop="8dp"
                android:paddingLeft="17dp"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="11dp"
                    android:paddingHorizontal="15dp"
                    android:text="How can I help you?"
                    android:background="@drawable/purple_box_right_curve"
                    android:textSize="15sp"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10:32"
                    android:paddingLeft="5dp"
                    android:textSize="12sp"
                    android:textColor="#8497D0"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/chat_box"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:background="@drawable/grey_rounded_box">

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/paper_clip_icon"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/gallery_icon"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_marginTop="7dp"
            android:gravity="bottom"
            android:layout_height="30dp"
            android:textSize="19sp"
            android:text=" Type something ..."
            android:paddingBottom="5dp"
            android:textColor="#FFFFFF"/>


        <TextView
            android:id="@+id/camera"
            android:layout_marginLeft="40dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/camera_icon_white"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/voice_recorder_icon"/>

        <TextView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/send_arrow_icon"
            />




    </LinearLayout>

</RelativeLayout>
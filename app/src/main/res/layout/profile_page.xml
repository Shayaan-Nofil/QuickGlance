<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="6"
        android:orientation="horizontal">

        <Button
            android:id="@+id/back_button"
            android:layout_marginStart="15dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:background="@drawable/drop_down_arrow_icon_purple"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Profile"
            android:textColor="#061F4D"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/settings_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="15dp"
            android:scaleY="0.9"
            android:scaleX="0.9"
            android:background="@drawable/settings_icon_purple"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/default_profile"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>


    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <!-- Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <!-- Recent Snaps -->
    <TextView
        android:id="@+id/Stories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Stories"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/white_box_rounded"
        android:weightSum="6"
        android:orientation="horizontal">

        <View
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:background="@drawable/camera_icon_grey"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="#061F4D"
            android:text="Add to My Story"
            android:gravity="center_vertical"/>

        <View
            android:layout_marginStart="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.6"
            android:scaleY="0.6"
            android:background="@drawable/option_icon_grey"/>

    </LinearLayout>

    <TextView
        android:id="@+id/Friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Friends"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"/>


    <LinearLayout
        android:id="@+id/acceptfriends_button"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/white_box_rounded"
        android:padding="5dp"
        android:weightSum="6"
        android:orientation="horizontal">

        <View
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:background="@drawable/add_person_icon_grey"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:textColor="#061F4D"
            android:text="Add Friends"
            android:gravity="center_vertical"/>

        <View
            android:layout_marginStart="15dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:background="@drawable/arrow_right_icon_grey"/>

    </LinearLayout>

</LinearLayout>

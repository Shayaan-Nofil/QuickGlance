<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#161A25"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_Activity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-62dp"
        android:src="#2F315A" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="-70dp"
        android:src="#4C4E7B" />


    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="270dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginBottom="60dp"
            android:layout_gravity="center"
            android:background="@drawable/skull"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"/>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/login_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:orientation="vertical">

        <TextView
            android:id="@+id/SignUp"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:paddingTop="5dp"
            android:layout_marginTop="20dp"
            android:text="     Sign Up"
            android:background="@drawable/purple_box_left_curve"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/Username"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="120dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/white_box_top_curve"
            android:hint="Username"
            android:drawableStart="@drawable/person_icon_grey"
            android:drawablePadding="10dp"
            android:textColorHint="#918B8B"
            android:textStyle="bold"
            android:paddingStart="20dp"
            android:textSize="20sp"
            android:inputType="text"
            android:textColor="#161A25"
            android:backgroundTint="#FFFFFF" />

        <EditText
            android:layout_marginTop="1dp"
            android:layout_below="@id/Username"
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/white_box_square"
            android:hint="Email"
            android:drawableLeft="@drawable/rocket_icon_grey"
            android:drawablePadding="10dp"
            android:textColorHint="#918B8B"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="#161A25"
            android:backgroundTint="#FFFFFF" />

        <EditText
            android:layout_marginTop="1dp"
            android:layout_below="@id/Email"
            android:id="@+id/Password"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="90dp"
            android:background="@drawable/white_box_bottom_curve"
            android:hint="Password"
            android:drawableLeft="@drawable/lock_icon_grey"
            android:drawablePadding="10dp"
            android:textColorHint="#918B8B"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:textSize="20sp"
            android:textColor="#161A25"
            android:inputType="textPassword"
            android:backgroundTint="#FFFFFF" />

        <RelativeLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignRight="@+id/Email"
            android:layout_marginRight="-40dp"
            android:layout_marginTop="197dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="#32367E" />

            <TextView
                android:id="@+id/LogIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Log In"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>


